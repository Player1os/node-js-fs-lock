{
  "name": "@player1os/fs-lock",
  "version": "1.0.1",
  "description": "A library that facilitates the aquiring an release of file system locks",
  "private": false,
  "main": "index.js",
  "types": "types/index.d.ts",
  "engines": {
    "node": "~8.7.0",
    "npm": "~5.5.1"
  },
  "scripts": {
    "preversion": "npm run validate && git checkout . && git checkout master && git pull",
    "postversion": "git push && git push --tags && npm publish",
    "build": "webpack",
    "build:watch": "npm run build -- --watch",
    "clean": "rm -rf index.js* && rm -rf types",
    "execute": "ts-node -r @player1os/bluebird-global -r module-alias/register",
    "lint": "tslint {./,src/**/,test/**/}*.ts --project ./tsconfig.json",
    "lint:watch": "chokidar ./*.ts src/**/*.ts test/**/*.ts -c \"npm run lint\" --initial --silent",
    "test": "npm run execute -- test/index.ts",
    "test:coverage": "nyc npm test",
    "test:watch": "chokidar src/**/*.ts test/**/*.ts -c \"npm test\" --initial --silent",
    "validate": "npm run clean && npm run build && npm run lint && npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Player1os/node-js-fs-lock.git"
  },
  "keywords": [
    "fs-lock"
  ],
  "author": "Osama Hassanein <player1os@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Player1os/node-js-fs-lock/issues"
  },
  "homepage": "https://github.com/Player1os/node-js-fs-lock#readme",
  "dependencies": {
    "fs-extra": "^4.0.2"
  },
  "devDependencies": {
    "@player1os/bluebird-global": "^1.0.0",
    "@player1os/tsconfig": "^1.0.0",
    "@player1os/tslint-config": "^1.3.1",
    "@player1os/webpack-config": "^1.0.0",
    "@types/bluebird-global": "^3.5.2",
    "@types/chai": "^4.0.0",
    "@types/fs-extra": "^4.0.2",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.21",
    "@types/webpack": "^2.2.15",
    "@types/webpack-env": "^1.13.0",
    "awesome-typescript-loader": "^3.1.3",
    "babel-core": "^6.24.1",
    "bluebird": "^3.5.0",
    "chai": "^4.0.0",
    "chokidar": "^1.7.0",
    "mocha": "^3.4.1",
    "module-alias": "^2.0.0",
    "nyc": "^11.0.1",
    "recursive-readdir-sync": "^1.0.6",
    "ts-node": "^3.0.4",
    "tslint": "^5.2.0",
    "tsutils": "1.6.0",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "all": true,
    "cache": true,
    "sourceMap": true,
    "instrument": true
  },
  "_moduleAliases": {
    "...": "."
  }
}
